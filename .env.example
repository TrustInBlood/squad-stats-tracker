# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_server_id_here

# Database Configuration
# Update these with your MariaDB connection details
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=squad_stats

# Bot Configuration
# The prefix for legacy commands (if we implement them)
COMMAND_PREFIX=!

# Environment
# Set to 'production' for production environment
NODE_ENV=development

# Optional: Squad Server Configuration
# These will be needed when we implement Squad server connection
SQUAD_SERVER_HOST=your_squad_server_ip
SQUAD_SERVER_PORT=your_squad_server_port
SQUAD_RCON_PASSWORD=your_rcon_password